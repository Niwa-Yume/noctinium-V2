{% extends 'base.html.twig' %}
{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>Mes choix</h1>

    <h2>J’y vais</h2>

    <ul>
        {% for e in going %}
            <li><a href="{{ path('app_event_show',{id: e.id}) }}">{{ e.title }}</a></li>
        {% else %}
            <li>Aucun événement.</li>
        {% endfor %}
    </ul>

    <h2>Je n’y vais pas</h2>
    <ul>
        {% for e in notGoing %}
            <li><a href="{{ path('app_event_show',{id: e.id}) }}">{{ e.title }}</a></li>
        {% else %}
            <li>Aucun événement.</li>
        {% endfor %}
    </ul>
    <h2>Statistiques des événements</h2>
    <p>Total : {{ total }}</p>
    <p>À venir : {{ upcoming }}</p>
    <ul>
        {% for cat in byCategory %}
            <li>{{ cat.name }} : {{ cat.nb }}</li>
        {% endfor %}
    </ul>
{% endblock %}